alias dr='sudo systemctl daemon-reload'
alias logs='cd ${LOGS}'
alias movies='source ~/.config/omnistream.conf ; cd ${MEDIA}/Movies'
alias oa='vi /opt/OmniStream/bin/omni_aliases ; cat /opt/OmniStream/bin/omni_aliases | sort > ~/omni_aliases ; mv ~/omni_aliases /opt/OmniStream/bin/omni_aliases ; source /opt/OmniStream/bin/omni_aliases'
