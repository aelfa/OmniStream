#!/bin/bash
#
#	This progream sets up Omnistream for the current user.  It can also be used to edit or
#	review the current settings and enable/disable Omnistream components.  The concept is
#	to basically talk the user through some of the fine tuning processes to make Omnistream
#	unique to their personal setup.
#

# Install any dependencies

hash dialog 2>/dev/null || { echo Installing dialog \(one time\) ; sudo apt update > /dev/null ; sudo apt install dialog -y > /dev/null ; }

# Set default values

touch ${HOME}/.config/omnistream.conf
source ${HOME}/.config/omnistream.conf
${OMNIHOME}/bin/make-env rebuild
source ${HOME}/.config/omnistream.conf
source ${OMNIHOME}/bin/omni_functions


# temporary file
TEMP=/tmp/answer${$}

# Get component list
COMPONENTS="$(ls ${HOME}/OmniStream/components/*.yaml | sed s/^.*\\/\//)"
ENABLED="$(ls ${HOME}/OmniStream/enabled/*.yaml | sed s/^.*\\/\//)"

edit_components() {
	OPTIONS=""
	COUNTER=1
	for i in ${COMPONENTS}
	do
		CODE=${i:0:3}
		if ! [[ ${CODE} =~ ^(001|999)$ ]]
		then
			NAME=${i#????}
			NAME=${NAME%".yaml"}
			OPTIONS="${OPTIONS}${COUNTER} ${NAME} "
			STATUS=off
			for j in ${ENABLED}
			do
				if [ ${i} = ${j} ]
				then
					STATUS=on
				fi
			done
			OPTIONS="${OPTIONS} ${STATUS} "
			COUNTER=$((COUNTER+1))
		fi
	done
	dialog --title "Enabled Components" --no-tags --checklist "Choose which components are active:" 0 0 0 ${OPTIONS} 2>${TEMP}

	if [ "$?" != "0" ] ; then return ; fi

	CHOICE=$(cat ${TEMP})
	COUNTER=1
	for i in ${COMPONENTS}
  	do
		CODE=${i:0:3}
		if ! [[ ${CODE} =~ ^(001|999)$ ]]
		then
			COMMAND="o- ${i}"
			for j in ${CHOICE}
			do
				if [ ${COUNTER} = ${j} ]
				then
					COMMAND="o+ ${i}"
				fi
			done
			eval ${COMMAND} > /dev/null
			COUNTER=$((COUNTER+1))
		fi
	done
	"${OMNIHOME}"/bin/omni_complete # Update Auto-complete
	exit
}

get_text() {
	dialog --title "${TITLE}" --clear --no-cancel --inputbox "${DESC}" 0 0 "${DEFAULT}" 2> ${TEMP}-Input
	VALUE=$(cat ${TEMP}-Input)
	rm ${TEMP}-Input
}

main_menu() {
	CHOICE=0
	while true; do
		dialog \
			--no-cancel \
			--title "Omnistream Configuration Editor" \
			--menu "Select an option:" 0 0 0 \
			1 "Edit components" \
			2 "Edit hostnames" \
			8 "Utilities" \
			9 "Exit" 2>${TEMP}

		CHOICE=$(cat ${TEMP})
  		case ${CHOICE} in
			1) edit_components;;
			2) ${OMNIHOME}/bin/setup-advanced;;
			8) utilities;;
			9) rm -f ${TEMP}*
				exit;;
		esac
	done
}

  main_menu
  #variable_menu
